<% provide(:title, 'Sign In') %>

<section class="signin">

<section>
<h1>Sign In</h1>
	<div class="center">
	<%= form_for(:session, url: sessions_path) do |f| %>
		<div>
	  	<%= f.text_field :email, autofocus: true, :placeholder => "Email" %>
		</div>
		<div>
	  <%= f.password_field :password, :placeholder => "Password" %>
		</div>
	  <br>
	  <%= f.submit 'Sign In' %>

	<% end %>
	</div>
</section>

</section>